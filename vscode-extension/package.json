{
  "name": "vscode-extension",
  "displayName": "deadrop",
  "description": "secret sharing tool",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:deadrop.drop",
    "onCommand:deadrop.dropFile",
    "onCommand:deadrop.grab",
    "onView:deadrop-sidebar"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deadrop-sidebar-view",
          "title": "deadrop",
          "icon": "media/handshake.svg"
        }
      ]
    },
    "views": {
      "deadrop-sidebar-view": [
        {
          "type": "webview",
          "id": "deadrop-sidebar",
          "name": "deadrop",
          "icon": "media/handshake.svg",
          "contextualTitle": "deadrop"
        }
      ]
    },
    "commands": [
      {
        "command": "deadrop.drop",
        "title": "Start drop"
      },
      {
        "command": "deadrop.dropFile",
        "title": "Start file drop"
      },
      {
        "command": "deadrop.grab",
        "title": "Start grab"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file && resourceExtname",
          "command": "deadrop.dropFile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "deadrop.drop",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build:react": "node ./scripts/build-non-chunk.js",
    "vscode:prepublish": "yarn run build:react && webpack --mode production",
    "compile": "yarn run build:react && webpack --mode development",
    "watch": "webpack --mode development --watch",
    "dev": "yarn run compile && code --extensionDevelopmentPath=$PWD",
    "lint": "eslint src --ext ts,tsx",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "dotenv-webpack": "^8.0.1",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "react-scripts": "^5.0.1",
    "rewire": "^6.0.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "dependencies": {},
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
