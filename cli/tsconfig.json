{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "build",
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "incremental": true,
        "paths": {
            "@shared/*": ["../shared/*"]
        },
        "typeRoots": ["./node_modules/@types/", "../node_modules/@types/", "./types/"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
